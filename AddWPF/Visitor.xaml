<Window x:Class="SqlMahonProject.AddWPF.Visitor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SqlMahonProject.AddWPF"
        mc:Ignorable="d"
        Title="Visitor" Height="450" Width="800">
    <Grid>
        <DataGrid Name="dataGrid" Margin="241,10,0,0"/>
        <TextBox HorizontalAlignment="Left" Margin="102,68,0,0" Text="{Binding Path=id,Mode=TwoWay}" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="102,129,0,0" Text="{Binding Path=nationality,Mode=TwoWay}" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="id" HorizontalAlignment="Left" Margin="25,68,0,0" VerticalAlignment="Top"/>
        <Label Content="nationality" HorizontalAlignment="Left" Margin="2,125,0,0" VerticalAlignment="Top"/>
        <Button Content="Button" Click="AddvisitorSql" HorizontalAlignment="Left" Margin="102,187,0,0" VerticalAlignment="Top"/>
        <Button Click="remove" Content="Button" HorizontalAlignment="Left" Margin="220,380,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="removeID"  HorizontalAlignment="Left" Margin="72,380,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
